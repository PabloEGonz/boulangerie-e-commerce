<div class="text-center">
<h2 class="font-semibold text-3xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="mt-10">  
  <div class="field">
    <%= f.label :email, class: "label-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input rounded w-full lg:w-2/5" %>
  </div>
  <div class="field">
    <%= f.label :password, class: "label-text" %>
    <% if @minimum_password_length %>
    <em class="label-text opacity-80">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input rounded w-full lg:w-2/5" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label-text" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input rounded w-full lg:w-2/5" %>
  </div>

  <div class="actions my-3">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
