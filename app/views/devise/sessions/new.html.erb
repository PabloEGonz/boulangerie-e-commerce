<div class="text-center">
    <h2 class="font-semibold text-3xl">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="mt-10">  
  <div class="field">
    <%= f.label :email, class: "label-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full lg:w-2/5" %>
  </div>
  <div class="field">
    <%= f.label :password, class: "label-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full lg:w-2/5" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field my-2">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: "label-text" %>
    </div>
  <% end %>
  <div class="actions my-3">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div></div>
<% end %>
<%= render "devise/shared/links" %>
</div>