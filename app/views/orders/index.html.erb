<div class="py-10 px-5 lg:px-10">
  <h1 class="text-2xl font-bold text-center uppercase py-5">Your Orders</h1>
  <div class="flex flex-col gap-2">
    <% @orders.each do |order| %>
      <%= link_to order_path(order.id) do %>
        <div class="rounded flex py-2 border border-white w-max justify-center">
          <p><%= order.created_at.to_date %></p>
          <p>Total: <%= number_to_currency(order.payment.total) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>