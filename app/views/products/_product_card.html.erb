<div class="p-2 border rounded basis-1/1 lg:basis-1/6">
  <%= image_tag product.image, class: "rounded" %>
  <h3 class="text-2xl font-semibold"><%= product.name %></h3>
  <div class="flex lg:block py-5 items-center">
    <div class="basis-1/2">
      <p class="font-semibold"><%= number_to_currency(product.price) %></p>
    </div>
    <div class="basis-1/2 text-right">
      <%= link_to "Add to cart", product_path(product), class: "btn btn-primary" %>
    </div>
  </div>
</div>
