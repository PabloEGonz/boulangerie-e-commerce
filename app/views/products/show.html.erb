<div class="px-5 lg:px-10 pt-36">
  <h3 class="text-2xl lg:text-3xl font-semibold text-center mb-5"><%= @product.name %></h3>
  <div data-controller="calculator" class="grid grid-cols-1 lg:grid-cols-5 lg:gap-10 justify-center">
    <% if @product.category == "Seasonal" || @product.stock == 0 %>
      <%= image_tag @product.image, class: "rounded lg:col-span-2 brightness-75 hover:brightness-100" %>
      <div class="col-span-3">
        <%= render 'unavailable_item' %>
      </div>
    <%else%>
      <%= image_tag @product.image, class: "rounded lg:col-span-2" %>
      <div class="col-span-3">
        <% if @cart_item.id  %>
          <%= render 'edit_cart_item' %>
        <% else %>
          <%= render 'new_cart_item' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
