<div class="p2">
  <h3 class="text-3xl font-semibold text-center mb-5"><%= @product.name %></h3>
  <div class="grid lg:grid-cols-5 gap-10">
    <%= image_tag @product.image, class: "rounded col-span-2" %>
    <div class="col-span-3">
      <p class="my-3 text-lg"><%= @product.description %></p>
      <p class="text-lg opacity-75">Type: <%= @product.category %></p>
      <p class="text-xl font-bold my-2"><%= number_to_currency(@product.price) %></p>
      <div>
        <label for="quantity">Quantity:</label>
        <input class="input input-bordered" type="number" value="1" min="1" name="quantity">
      </div>
      <p>On stock: <%= @product.stock %></p>
    </div>
    <button class="btn">Add to Cart</button>
  </div>
</div>
