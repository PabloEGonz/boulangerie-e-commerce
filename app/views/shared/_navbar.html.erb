<div class="bg-darkbrown" x-data="{ open: false }">
  <nav class="flex items-center justify-between flex-wrap p-3">
    <div class="lg:flex items-center flex-shrink-0 text-white mr-6">
      <%= image_tag "le-festin", class: "h-20" %>
    </div>
    <div class="block lg:hidden">
      <button @click="open = !open" class="flex items-center px-3 py-2 border rounded border-gray-400">
        <svg x-show="!open" fill="currentColor" class="fill-current h-5 w-5 text-white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v15z"/>
        </svg>
        <svg x-show="open" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-x-lg h-5 w-5" viewBox="0 0 16 16">
          <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
        </svg>
      </button>
    </div>
    <div class="w-full block flex-grow lg:hidden" x-show="open">
      <div class="lg:flex-grow">
        <ul class="text-lg text-white">
          <%= render "shared/links" %>
        </ul>
      </div>
    </div>
    <div class="hidden lg:flex lg:items-center lg:w-auto">
      <div class="desktop">
        <ul class="flex text-xl font-semibold text-white gap-5 p-10">
          <%= render "shared/links" %>
        </ul>
      </div>
    </div>
  </nav>
</div>
