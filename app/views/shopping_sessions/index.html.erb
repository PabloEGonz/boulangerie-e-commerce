<div class="text-center">
  <h2>Total: 
    <%= number_to_currency(@shopping_session.total) %>
  </h2>
  <div class="rounded p-5 bg-lightgreen">
    <% @cart_items.each do |item| %>
      <div class="rounded flex border-whitegreen my-2 justify-around items-center border">
        <%= image_tag item.product.image, class: "rounded h-10" %>
        <p>
          <%= item.product.name %>
        </p>
        <p>
          <%= number_to_currency(item.product.price) %>
        </p>
        <%= button_to "Remove", product_cart_item_path(item.product.id, item.id), method: :delete, class: "btn" %>
      </div>
    <% end %>
    <h2 class="text-right pr-5 font-semibold">Total: 
      <%= number_to_currency(@shopping_session.total) %>
    </h2>
  </div>
</div>
