<section class="px-5 lg:px-10 py-10 lg:py-14">
  <div class="flex flex-col lg:flex-row gap-y-5">
    <div class="basis-1/3">
      <table class="w-full rounded pl-1 bg-lightgreen border-separate">
        <tr class="rounded">
          <th>QTY</th>
          <th>Product</th>
          <th>Total</th>
        </tr>
        <% @cart_items.each do |item| %>
          <tr class="rounded border">
            <td class="pl-5">
              <%= item.quantity %>
              <td>
                <%= item.product.name %>
              </td>
              <td class="text-sm">
                <%= number_to_currency(item.product.price * item.quantity) %>
              </td>
            </tr>
          <% end %>
        </table>
        <h2 class="text-xl font-semibold">Grand Total: <%= number_to_currency(@shopping_session.total) %></h2>
      </div>
      <div class="basis-2/3">
        <%= render "payment_form" %>
      </div>
    </div>
  </section>